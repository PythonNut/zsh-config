#!/bin/zsh

# core zsh setup
if [[ $TERM == dumb ]]; then
  emulate sh
  PS1="$ "
  unsetopt prompt_cr
  unsetopt zle
  return 0
fi

zstyle :compinstall filename '~/.zshrc'
skip_global_compinit=1
fpath=(~/.zsh.d/completers $fpath)
autoload -Uz compinit  && compinit -d ~/.zsh.d/zcompdump
echo -n > ~/.zsh.d/startup.log
setopt function_argzero
mkdir -p ~/.zsh.d

export ZDOTDIR=~/.zsh.d

# let us begin
for zsh_module in ~/.zsh.d/modules_minimal/*.zsh(nN); do
  source $zsh_module
done

# and source host specific files
for file in ~/.zsh.d/local/*.zsh(nN); do
  source $file
done
